upstream my-apps {
    server 127.0.0.1:8000;
    server 127.0.0.1:8001;
    server 127.0.0.1:8002;
    // server 127.0.0.1:8001 weight=3;  # t3.medium
    // server 127.0.0.1:8002 weight=5;  # t3.xlarge
}

server {
    listen 8080;

    location / {
        proxy_pass http://my-apps;

        include /etc/nginx/proxy_params;
    }

}
