server {
    listen 8080;

    location /page1 {
        # rewrite ^/page1(/.*)$ $1 break;
        proxy_pass http://127.0.0.1:8000/;

        include /etc/nginx/proxy_params;
    }

    location /page2 {
        proxy_pass http://127.0.0.1:8001/;

        include /etc/nginx/proxy_params;
    }

    location /page3 {
        proxy_pass http://127.0.0.1:8002/;

        include /etc/nginx/proxy_params;
    }

}
